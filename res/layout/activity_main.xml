<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.h.stars.StarsScoreView
        android:id="@+id/stars1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:background="#987594"
        android:padding="4dp"
        app:maxProgress="10"
        app:maxStar="5"
        app:radius="30dp"
        app:space="5dp"
        app:stroke="2dp"
        app:color="@color/red" />

    <com.h.stars.StarsScoreView
        android:id="@+id/stars2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stars1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:background="#987594"
        android:padding="4dp"
        app:maxProgress="10"
        app:maxStar="5"
        app:radius="30dp"
        app:space="5dp"
        app:stroke="2dp"
        app:color="@color/blue" />

    <com.h.stars.StarsScoreView
        android:id="@+id/stars3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stars2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:padding="4dp"
        app:maxProgress="10"
        app:maxStar="5"
        app:radius="15dp"
        app:space="4dp"
        app:stroke="1dp"
        app:color="@color/blue" />

    <com.h.stars.StarsScoreView
        android:id="@+id/stars4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stars3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:padding="4dp"
        app:maxProgress="10"
        app:maxStar="8"
        app:radius="10dp"
        app:space="20dp"
        app:stroke="1px"
        app:color="@color/blue" />

</RelativeLayout>